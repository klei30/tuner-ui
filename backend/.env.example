# Tuner-UI Backend Configuration
# Copy this file to .env and fill in your actual values

# ===== Database Configuration =====
# Development (SQLite) - default for local development
DATABASE_URL=sqlite:///./tuner_ui.db

# Production (PostgreSQL) - uncomment and configure for production
# DATABASE_URL=postgresql://tuner_user:your_password@localhost:5432/tunerui
# POSTGRES_HOST=localhost
# POSTGRES_PORT=5432
# POSTGRES_DB=tunerui
# POSTGRES_USER=tuner_user
# POSTGRES_PASSWORD=your_secure_password

# ===== Security Configuration =====
# CRITICAL: Change these in production!

# Tinker API Key (required for training)
# Get your API key from the Tinker platform
TINKER_API_KEY=your_tinker_api_key_here

# Secret key for session encryption (MUST be random 64+ chars in production)
SECRET_KEY=dev-secret-key-change-in-production-must-be-at-least-32-chars-long

# Encryption Key for HuggingFace Token Storage
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
# IMPORTANT: Keep this secret and never commit it to version control
ENCRYPTION_KEY=your_encryption_key_here

# Authentication - Allow anonymous access (development only, set to false in production)
ALLOW_ANON=true

# ===== CORS Configuration =====
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://127.0.0.1:3000,http://127.0.0.1:3002

# ===== Redis Configuration =====
# For Celery task queue (optional in development, required in production)
# REDIS_URL=redis://localhost:6379/0

# ===== Storage Configuration =====
# Directory for storing training artifacts, logs, and checkpoints
ARTIFACT_DIR=./artifacts

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=DEBUG

# ===== Monitoring Configuration =====
# Optional: Sentry DSN for error tracking
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Environment name (development, staging, production)
ENVIRONMENT=development

# ===== Application Settings =====
# Number of log lines to show in tail
LOG_TAIL_LINES=200

# Optional: Backend Host and Port (for uvicorn)
# HOST=0.0.0.0
# PORT=8000
